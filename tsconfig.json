{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "lib": ["es2015", "dom"],
    "allowJs": true,
    "sourceMap": true,
    "outDir": "./dist",
    "removeComments": true,
    "strict": true,
    "baseUrl": "./src",
    "esModuleInterop": true
  },
  "include": [
    "src/**/*ts"
  ],
  "exclude": [
    "node_modules"
  ]
}